VERSION 1.0 CLASS
BEGIN
  MultiUse = -1  'True
  Persistable = 0  'NotPersistable
  DataBindingBehavior = 0  'vbNone
  DataSourceBehavior  = 0  'vbNone
  MTSTransactionMode  = 0  'NotAnMTSObject
END
Attribute VB_Name = "clsKeyRAKaiSel"
Attribute VB_GlobalNameSpace = False
Attribute VB_Creatable = True
Attribute VB_PredeclaredId = False
Attribute VB_Exposed = False
'
'   開催選択画面用キー
'
'   年度と場所コードで絞り込む
'   場所コードが 00 の場合は、全競馬場
'
Option Explicit

'---+----1----+----2----+----3----+----4----+----5----+----6----+----7----+----8
'   内部変数
'---+----1----+----2----+----3----+----4----+----5----+----6----+----7----+----8

Private mstrKey As String

'---+----1----+----2----+----3----+----4----+----5----+----6----+----7----+----8
'   プロパティ
'---+----1----+----2----+----3----+----4----+----5----+----6----+----7----+----8


'
'   機能: キー文字列 代入プロパティ
'
'   備考: なし
'
Public Property Let str(RHS As String)
    mstrKey = RHS
End Property 'Str


'
'   機能: キー文字列 取得プロパティ
'
'   備考: なし
'
Public Property Get str() As String
    str = mstrKey
End Property 'Str


'
'   機能: Year 代入プロパティ
'
'   備考: なし
'
Public Property Let Year(RHS As String)
    Mid$(mstrKey, 1, 4) = RHS
End Property 'Year


'
'   機能: Year 取得プロパティ
'
'   備考: なし
'
Public Property Get Year() As String
    Year = Mid$(mstrKey, 1, 4)
End Property 'Year


'
'   機能: JyoCD 代入プロパティ
'
'   備考: なし
'
Public Property Let JyoCD(RHS As String)
    Mid$(mstrKey, 5, 2) = RHS
End Property 'JyoCD


'
'   機能: JyoCD 取得プロパティ
'
'   備考: なし
'
Public Property Get JyoCD() As String
    JyoCD = Mid$(mstrKey, 5, 2)
End Property 'JyoCD


'---+----1----+----2----+----3----+----4----+----5----+----6----+----7----+----8
'   外部関数
'---+----1----+----2----+----3----+----4----+----5----+----6----+----7----+----8

'
'   機能: SQL WHERE 文を返す
'
'   備考: なし
'
Public Function SQLWHEREString() As String
    Dim str As String
    
    str = " WHERE [Year]='" & Year() & "'"
    str = str & " AND [JyoCD]<='10' "
    If JyoCD() <> "00" Then
        str = str & " AND [JyoCD]='" & JyoCD() & "'"
    End If
    
    SQLWHEREString = str
End Function

